Hostname    "<%=node['collectd']['hostname']%>"
FQDNLookup   <%=node['collectd']['fqdn_lookup']%>
BaseDir     "<%=node['collectd']['base_dir']%>"
PIDFile     "<%=node['collectd']['pid_file']%>"
PluginDir   "<%=node['collectd']['plugin_dir']%>"
TypesDB     "<%=node['collectd']['typesdb']%>"
Interval     <%=node['collectd']['interval']%>
Timeout      <%=node['collectd']['timeout']%>
ReadThreads  <%=node['collectd']['read_threads']%>

##
##Logging needs to be loaded first and we're always going to load it.  It's going here.
##

#LoadPlugin syslog
LoadPlugin logfile

<Plugin logfile>
	LogLevel info
	File STDOUT
	Timestamp true
	PrintSeverity false
</Plugin>

#<Plugin syslog>
#	LogLevel info
#</Plugin>

Include "/opt/collectd/etc/plugins/*.conf"
Include "/opt/collectd/etc/plugins/filter.conf"
Include "/opt/collectd/etc/plugins/thresholds.conf"

